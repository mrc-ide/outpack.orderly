{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "type": "object",
    "properties": {
        "artefacts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                    },
                    "format": {
                        "enum": ["report", "data", "staticgraph", "interactivegraph", "interactivehtml"]
                    },
                    "contents": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1
                    }
                },
                "required": ["description", "format", "contents"]
            }
        },
        "packages": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "global": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "role": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "displayname": {
            "type": ["null", "string"]
        },
        "description": {
            "type": ["null", "string"]
        }
    },

}
